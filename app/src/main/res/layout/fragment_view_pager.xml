<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.al_ameenfashola.fashola_hw5.ViewPagerActivity$PlaceholderFragment">





    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/image"
        android:layout_below="@+id/rating"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/description"
        android:layout_below="@+id/stars"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="year"
        android:id="@+id/year"
        android:layout_below="@+id/length"
        android:layout_alignStart="@+id/length" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length"
        android:id="@+id/length"
        android:layout_below="@+id/director"
        android:layout_alignStart="@+id/director" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="director"
        android:id="@+id/director"
        android:layout_below="@+id/name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stars "
        android:id="@+id/stars"
        android:layout_below="@+id/year"
        android:layout_alignStart="@+id/year" />



    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:layout_below="@+id/description"
        android:layout_toEndOf="@+id/director"
        android:layout_marginTop="36dp" />



</RelativeLayout>
